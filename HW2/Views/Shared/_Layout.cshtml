<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auto Parts Israel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item"><a href="/Home/Welcome" class="nav-link">Home</a></li>
                    <li class="nav-item"><a href="/Home/About" class="nav-link">About</a></li>
                    <li class="nav-item"><a href="/Home/Contact" class="nav-link">Contact</a></li>
                    <li class="nav-item"><a href="/Product/Shop" class="nav-link">Shop</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right mr-auto">
                    @if (HttpContext.Current.Session["User"] != null)
                    {
                        if (Session["IsAdmin"].ToString() == "True")
                        {
                            <li class="nav-item"><a id="username" class="nav-link" href='@Url.Action("AdminPriv", "Admin")'>Hello, @Session["User"]</a></li>
                            <li class="nav-item"><a href="/Admin/AdminSignout" id="signout" class="nav-link">Signout</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a id="username" class="nav-link">Hello, @Session["User"]</a></li>
                            <li class="nav-item"><a href="/User/UserSignout" id="signout" class="nav-link">Signout</a></li>
                        }
                    }
                    else
                    {
                        <li class="nav-item"><a href="/Home/PreRegister" id="registerLink" class="nav-link">Register</a></li>
                        <li class="nav-item"><a href="/Home/PreLogin" id="loginLink" class="nav-link">Login</a></li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AutoPartsIsrael</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
